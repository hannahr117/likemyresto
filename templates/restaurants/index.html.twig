{% extends 'base.html.twig' %}

{% block title %}Restaurants index{% endblock %}

{% block body %}
    <h1>Restaurants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Postal_code</th>
                <th>Description</th>
                <th>Owner</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.name }}</td>
                <td>{{ restaurant.postalCode }}</td>
                <td>{{ restaurant.description }}</td>
                <td>
                    {% if restaurant.owner %}
                        {{ restaurant.owner.firstName }} {{ restaurant.owner.lastName }}
                    {% else %}
                        No owner assigned.
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_restaurants_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('app_restaurants_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_restaurants_new') }}">Create new</a>
{% endblock %}
